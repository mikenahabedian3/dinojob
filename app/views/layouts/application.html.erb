<!-- app/views/layouts/application.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Custom CSS -->
  <link href="/assets/custom.css" rel="stylesheet">

  <!-- Google Analytics (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-J646FQ48R5"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-J646FQ48R5');
  </script>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-black">
    <div class="container">
      <!-- Logo -->
      <a class="navbar-brand" href="/">
        <img src="/assets/logo.png" alt="Logo" class="logo">
      </a>
      
      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, class: "nav-link" %></li>  
        <% else %>
          <li class="nav-item"><%= link_to "Sign Up", new_user_registration_path, class: "nav-link btn btn-purple me-2" %></li>
          <li class="nav-item"><%= link_to "Login", new_user_session_path, class: "nav-link btn btn-white" %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="container mt-4">
    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name == 'notice' ? 'success' : 'danger' %>">
        <%= msg %>
      </div>
    <% end %>
  </div>

  <%= yield %>

  <!-- Bootstrap JS CDN (Optional if you need Bootstrap JavaScript functionality) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
