<!-- views/searches/index.html.erb -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="text-center mb-4">Describe Your Dream Job</h2>
          <%= form_tag(searches_path, method: :get) do %>
            <div class="input-group mb-3">
              <%= text_field_tag :query, params[:query], class: "form-control form-control-lg", placeholder: "e.g. I have 5 years of experience in graphic design..." %>
              <div class="input-group-append">
                <%= submit_tag "Search", class: "btn btn-primary btn-lg" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="results-container mt-5">
  <!-- Results will be populated here -->
</div>
